
<script src="js/ui.coverflow.js"></script>

<section id="coverflow_wrapper">
    <div id="coverflow">
        <% Article.all(published:true).each do |art| %>
            <div data-id=<%= art.id %> data-title="<%= art.title %>">
                <div style="background-image: url('<%= art.image %>')">
                    <div>
                        <%= art.title %>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
    <div id="slider"></div>
</section>
<hr>
